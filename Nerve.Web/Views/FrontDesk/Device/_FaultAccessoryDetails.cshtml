                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-sm-4 text-right">
                        @translateItems[LanguageKeys.FaultDetails]
                    </div>
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.FaultDetail, new { @class = "form-control text-area", })
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-sm-4 text-right">
                        @translateItems[LanguageKeys.Remarks]
                    </div>
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control text-area", })
